<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#a8dff4"/>
            <stroke
                android:width="2dp"
                android:color="#FFF" />    
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <solid android:color="#e2f4fb"/>
        	<stroke
                android:width="2dp"
                android:color="#FFF" />
        </shape>
    </item>

    <item>        
        <shape>
        	<solid android:color="#D3D3D3"/>
        	<stroke
                android:width="2dp"
                android:color="#FFF" />
        </shape>
    </item>
</selector>

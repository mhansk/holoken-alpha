<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
	
	<RelativeLayout
	    android:id="@+id/titlecontainer"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="2dp"
	    tools:context=".MainActivity">
    
	    <TextView android:id="@+id/appname"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:text="@string/app_name"
	              android:textStyle="bold"
				  android:layout_alignParentLeft="true"/>
	    <TextView android:id="@+id/playtime"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:text="00:00:00"
				  android:layout_alignParentRight="true"/>
    </RelativeLayout>
    
    <net.mathdoku.holoken.GridView android:id="@+id/gridview"
	    	  android:layout_width="wrap_content" 
	    	  android:layout_height="wrap_content"
	    	  android:layout_gravity="center_horizontal"/>
    
    <LinearLayout android:id="@+id/controls"
       	android:layout_width="fill_parent" 
    	android:layout_height="0dip"
    	android:layout_weight="1"
    	android:padding="1dp">
		
		<RadioGroup android:id="@+id/modebuttons"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:orientation="vertical"
    		android:layout_weight="0.25">
	    
		    <RadioButton android:id="@+id/button_pen"
		        android:text=""
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:button="@drawable/button_pen"
		        android:background="@drawable/radio_button"
		    	android:layout_weight="1"
		    	android:checked="true"/>
		    <RadioButton android:id="@+id/button_pencil"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:button="@drawable/button_pencil"
		        android:text=""
		        android:background="@drawable/radio_button"
		    	android:layout_weight="1"/>
		    <RadioButton android:id="@+id/button_eraser"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:button="@drawable/button_eraser"
		        android:text=""
		        android:background="@drawable/radio_button"
		    	android:layout_weight="1"/>
		</RadioGroup>    
		
	<TableLayout 
		android:layout_width="0dip"
		android:layout_height="fill_parent"
		android:orientation="horizontal"
 		android:shrinkColumns="*"
     	android:stretchColumns="*"		
		android:layout_weight="1">
		
	    <TableRow android:layout_weight="1">
			<Button android:id="@+id/button1"
			    	android:text="@string/number1"
			    	android:layout_height="fill_parent"
			    	android:layout_width="fill_parent"
			    	android:background="@drawable/keypad_button"/>
			<Button android:id="@+id/button2"
			    	android:text="@string/number2"
			    	android:layout_height="fill_parent"
			    	android:layout_width="fill_parent"
			    	android:background="@drawable/keypad_button"/>
			<Button android:id="@+id/button3"
			    	android:text="@string/number3"
			    	android:layout_height="fill_parent"
			    	android:layout_width="fill_parent"
			    	android:background="@drawable/keypad_button"/>

		</TableRow>
		
	    <TableRow android:layout_weight="1">
			<Button android:id="@+id/button4"
			    	android:text="@string/number4"
			    	android:layout_height="fill_parent"
			    	android:layout_width="fill_parent"
			    	android:background="@drawable/keypad_button"/>
			<Button android:id="@+id/button5"
			    	android:text="@string/number5"
			    	android:layout_height="fill_parent"
			    	android:layout_width="fill_parent"
			    	android:background="@drawable/keypad_button"/>
			<Button android:id="@+id/button6"
			    	android:text="@string/number6"
			    	android:layout_height="fill_parent"
			    	android:layout_width="fill_parent"
			    	android:background="@drawable/keypad_button"/>
		</TableRow>
		
	    <TableRow android:layout_weight="1">
			<Button android:id="@+id/button7"
			    	android:text="@string/number7"
			    	android:layout_height="fill_parent"
			    	android:layout_width="fill_parent"
			    	android:background="@drawable/keypad_button"/>
			<Button android:id="@+id/button8"
			    	android:text="@string/number8"
			    	android:layout_height="fill_parent"
			    	android:layout_width="fill_parent"
			    	android:background="@drawable/keypad_button"/>
			<Button android:id="@+id/button9"
			    	android:text="@string/number9"
			    	android:layout_height="fill_parent"
			    	android:layout_width="fill_parent"
			    	android:background="@drawable/keypad_button"/>
		</TableRow>

	</TableLayout>
	
	</LinearLayout>
	
	<LinearLayout android:id="@+id/actionBar"
    		     android:layout_height="36dp"
    		     android:layout_width="fill_parent"
			     android:orientation="horizontal"
			     android:paddingTop="2dp"
    		     android:background="@drawable/menu_button">
	    
		    <ImageButton android:id="@+id/icon_new"
			    		 android:layout_height="fill_parent"
			    		 android:layout_width="fill_parent"
		        		 android:src="@drawable/menu_new_icon"
		        		 android:background="@drawable/menu_button"
		        		 android:layout_weight="1"/>
		    <ImageButton android:id="@+id/icon_replay"
			    		 android:layout_height="fill_parent"
			    		 android:layout_width="fill_parent"
		        		 android:src="@drawable/menu_replay_icon"
		        		 android:background="@drawable/menu_button"
		        		 android:layout_weight="1"/>
		    <ImageButton android:id="@+id/icon_hint"
			    		 android:layout_height="fill_parent"
			    		 android:layout_width="fill_parent"
		        		 android:src="@drawable/menu_hint_icon"
		        		 android:background="@drawable/menu_button"
		        		 android:layout_weight="1"/>
		    <ImageButton android:id="@+id/icon_overflow"
			    		 android:layout_height="fill_parent"
			    		 android:layout_width="fill_parent"
						 android:src="@drawable/menu_overflow_icon"
		        		 android:background="@drawable/menu_button"
		        		 android:layout_weight="1"/>
	</LinearLayout>
</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/saveGameRow"
		android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
	
	<net.mathdoku.holoken.GridView  
		android:id="@+id/saveGridView"
		android:layout_width="100dp" 
		android:layout_height="100dp"
		android:layout_alignParentLeft="true"
		android:layout_margin="15dp" 
		android:layout_centerVertical="true"/>

	<RelativeLayout
		android:id="@+id/saveGameData"
		android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/saveGridView"
        android:layout_margin="15dp">
		<TextView android:id="@+id/saveGameTitle"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:layout_centerHorizontal="true"
				  android:text="HoloKen Game"/>
		<TextView android:id="@+id/saveGameTime"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:layout_below="@id/saveGameTitle"
				  android:layout_centerHorizontal="true"/>
		
	    <ImageButton android:id="@+id/button_play"
	        		 android:layout_width="wrap_content"
				  	 android:layout_height="wrap_content"
					 android:src="@drawable/button_play"
					 android:layout_below="@id/saveGameTime"/>
	    <ImageButton android:id="@+id/button_share"
	        		 android:layout_width="wrap_content"
				  	 android:layout_height="wrap_content"
					 android:src="@drawable/button_share"
					 android:layout_below="@id/saveGameTime"
					 android:layout_toRightOf="@id/button_play"
					 android:enabled="false"/>
		<ImageButton android:id="@+id/button_delete"
	        		 android:layout_width="wrap_content"
				  	 android:layout_height="wrap_content"
					 android:src="@drawable/button_remove"
					 android:layout_below="@id/saveGameTime"
					 android:layout_toRightOf="@id/button_share"/>

	</RelativeLayout>
</RelativeLayout>
